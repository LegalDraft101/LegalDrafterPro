{
  "typeId": "gap-certificate",
  "typeName": "Affidavit for Gap Certificate",
  "fields": [
    { "id": "deponentName", "name": "deponentName", "label": "Full Name of Deponent", "type": "text", "required": true, "placeholder": "Enter your full name", "section": "Personal Details" },
    { "id": "age", "name": "age", "label": "Age (in years)", "type": "number", "required": true, "placeholder": "e.g. 22", "section": "Personal Details" },
    { "id": "relation", "name": "relation", "label": "Son / Daughter of", "type": "select", "required": true, "options": [{ "value": "son", "label": "Son" }, { "value": "daughter", "label": "Daughter" }], "section": "Personal Details" },
    { "id": "fatherName", "name": "fatherName", "label": "Father's / Parent's Name", "type": "text", "required": true, "placeholder": "Father's or parent's full name", "section": "Personal Details" },
    { "id": "permanentAddress", "name": "permanentAddress", "label": "Permanent Address", "type": "textarea", "required": true, "placeholder": "Full residential / permanent address", "section": "Personal Details" },
    { "id": "aadhaarUpload", "name": "aadhaarUpload", "label": "Upload Aadhaar Card (for age verification)", "type": "file", "required": true, "accept": "image/jpeg,image/png,application/pdf", "hint": "Upload a clear photo or scan of your Aadhaar card (JPEG, PNG, or PDF)", "section": "Identity Verification" },

    { "id": "lastQualification", "name": "lastQualification", "label": "Last Educational Qualification", "type": "text", "required": true, "placeholder": "e.g. B.Sc. in Computer Science", "section": "Educational Details" },
    { "id": "institutionName", "name": "institutionName", "label": "Institution / University Name", "type": "text", "required": true, "placeholder": "Name of the institution", "section": "Educational Details" },
    { "id": "yearOfCompletion", "name": "yearOfCompletion", "label": "Year of Completion", "type": "text", "required": true, "placeholder": "e.g. 2022", "section": "Educational Details" },

    { "id": "gapFrom", "name": "gapFrom", "label": "Gap Period From", "type": "date", "required": true, "section": "Gap Period Details" },
    { "id": "gapTo", "name": "gapTo", "label": "Gap Period To", "type": "date", "required": true, "section": "Gap Period Details" },
    { "id": "gapDuration", "name": "gapDuration", "label": "Duration of Gap", "type": "text", "required": true, "placeholder": "e.g. 2 years and 3 months", "section": "Gap Period Details" },
    { "id": "reasonForGap", "name": "reasonForGap", "label": "Reason for Taking the Gap", "type": "textarea", "required": true, "placeholder": "Explain the reason for the educational gap", "section": "Gap Period Details" },

    { "id": "admissionInstitution", "name": "admissionInstitution", "label": "Institution Seeking Admission In", "type": "text", "required": true, "placeholder": "Name of the institution you intend to join", "section": "Admission Details" },

    { "id": "applicationDate", "name": "applicationDate", "label": "Application Date", "type": "date", "required": true, "section": "Execution & Verification" },
    { "id": "verificationPlace", "name": "verificationPlace", "label": "Place of Verification", "type": "text", "required": true, "placeholder": "City / Town", "section": "Execution & Verification" },
    { "id": "verificationDate", "name": "verificationDate", "label": "Verification Date", "type": "date", "required": true, "section": "Execution & Verification" },

    { "id": "advocateName", "name": "advocateName", "label": "Advocate / Notary Public Name", "type": "text", "required": false, "placeholder": "Name of attesting advocate or notary", "section": "Attestation Details (Optional)" },
    { "id": "enrolmentNo", "name": "enrolmentNo", "label": "Enrolment / Registration No.", "type": "text", "required": false, "placeholder": "Bar Council enrolment number", "section": "Attestation Details (Optional)" },
    { "id": "advocateAddress", "name": "advocateAddress", "label": "Advocate / Notary Address", "type": "text", "required": false, "placeholder": "Office address", "section": "Attestation Details (Optional)" }
  ]
}
